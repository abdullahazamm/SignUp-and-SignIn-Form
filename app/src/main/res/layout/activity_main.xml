<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background"
    >


    <Button
        android:id="@+id/signupbtn"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:background="@drawable/custbtn"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ortextview"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_marginStart="174dp"
        android:layout_marginLeft="174dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="179dp"
        android:layout_marginRight="179dp"
        android:text="OR"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupbtn" />


    <Button
        android:id="@+id/signinbtn"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:background="@drawable/custbtn"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ortextview" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signupformcard"
        android:layout_width="412dp"
        android:layout_height="356dp"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinbtn">


        <EditText
            android:id="@+id/nameedittext"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custedittextfields"
            android:hint="Enter your name"
            android:inputType="text" />

        <EditText
            android:id="@+id/emailedittext"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/custedittextfields"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordedittext"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/custedittextfields"
            android:hint="Enter your Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repasswordedittext"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/custedittextfields"
            android:hint="Re-Enter your Password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/signincardbtn"
            android:layout_width="152dp"
            android:layout_height="72dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/custbtn"
            android:text="Sign In" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>